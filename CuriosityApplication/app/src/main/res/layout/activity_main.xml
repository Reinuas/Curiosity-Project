<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/app_name"
        android:src="@drawable/main_image" />


    <!-- http://stackoverflow.com/questions/12492064/android-add-image-to-button -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:orientation="vertical"
        android:id="@+id/homepage_wall" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/button_left"
                android:layout_width="125dp"
                android:layout_height="100dp"
                android:layout_marginBottom="10dp"
                android:drawableBottom="@drawable/sub_image"
                android:text="Dublin" />

            <Button
                android:id="@+id/button_middle"
                android:layout_width="125dp"
                android:layout_height="100dp"
                android:layout_marginBottom="10dp"
                android:drawableBottom="@drawable/sub_image"
                android:text="Maynooth" />

        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/button_right"
                android:layout_width="125dp"
                android:layout_height="100dp"
                android:layout_marginBottom="10dp"
                android:drawableBottom="@drawable/sub_image"
                android:text="Glendalough" />

            <Button
                android:id="@+id/button_right_two"
                android:layout_width="125dp"
                android:layout_height="100dp"
                android:layout_marginBottom="10dp"
                android:drawableBottom="@drawable/sub_image"
                android:text="Montpellier" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/button_right3"
                android:layout_width="125dp"
                android:layout_height="100dp"
                android:layout_marginBottom="10dp"
                android:drawableBottom="@drawable/sub_image"
                android:text="Paris" />

            <Button
                android:id="@+id/button_right_two4"
                android:layout_width="125dp"
                android:layout_height="100dp"
                android:layout_marginBottom="10dp"
                android:drawableBottom="@drawable/sub_image"
                android:text="Maues" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/button_right5"
                android:layout_width="125dp"
                android:layout_height="100dp"
                android:layout_marginBottom="10dp"
                android:drawableBottom="@drawable/sub_image"
                android:text="Sao Paulo" />

            <Button
                android:id="@+id/button_right_two6"
                android:layout_width="125dp"
                android:layout_height="100dp"
                android:layout_marginBottom="10dp"
                android:drawableBottom="@drawable/sub_image"
                android:text="Vinhedo" />

        </LinearLayout>



    </LinearLayout>
</RelativeLayout>
