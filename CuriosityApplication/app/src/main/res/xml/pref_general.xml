<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">


    <ListPreference
        android:key="general_language_dialog"
        android:title="@string/pref_general_language"
        android:defaultValue="en"
        android:entries="@array/pref_general_language_dialog_list_titles"
        android:entryValues="@array/pref_general_language_dialog_list_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        />

    <CheckBoxPreference
        android:key="general_splash_checkbox"
        android:title="@string/pref_general_splash"
        android:summary="@string/pref_general_splash_summary"
        android:defaultValue="false"
        />

    <CheckBoxPreference
        android:key="general_boot_sound_checkbox"
        android:title="@string/pref_general_boot_sound"
        android:summary="@string/pref_general_boot_sound_summary"
        android:defaultValue="false"
        />

</PreferenceScreen>
