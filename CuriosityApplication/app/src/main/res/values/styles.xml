<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowActionBar">true</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:actionBarStyle">@color/faint_blue</item>
    </style>
    <style name="MyActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">#66B3FF</item>
    </style>
    <style name="Theme.Splash" parent="android:Theme">
        <item name="android:windowBackground">@drawable/weblogowhite</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppThemeWithOverlay" parent="AppTheme">
        <item name="android:windowActionBarOverlay">true</item>
    </style>

</resources>
